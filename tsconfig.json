{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": "./",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "screens/*": ["src/screens/*"],
      "components/*": ["src/components/*"],
    }
  }
}
